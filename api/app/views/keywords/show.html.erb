<header>
  <h1 class="text-center display-4"><%= @keyword.word%></h1>
</header>

<section class="w-75 mx-auto">

<a name="episodes"></a>
<h4>Episodes with this keyword:</h4>
<%if @episodes.count == 0%>
  No episodes are tagged with this keyword.
<%else%>
  <%@episodes.each_slice(3) do |group|%>
  <div class="row">
    <% group.each do |e|%>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <p class="card-title"><%= link_to e.title, e%></p>
          <p class="card-text"><%= (e.description.length>100) ? e.description.first(80) + "..." : e.description%></p>
        </div>
        <div class="card-footer">
          <small class="text-muted">From <%=link_to e.podcast.name, e.podcast%></small>
        </div>
      </div>
     </div>
     <%end%>
  <p>&nbsp;</p>
  </div>
  <%end%>
<%end%>
</section>
