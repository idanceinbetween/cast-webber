<div class="text-center">

  <h3>User creation</h3>

  <%= form_for @user, class: "form-group" do |f| %>
    <%= f.text_field :username, class: "form-control col-xs-4", placeholder: "username" %><br>
    <%= f.password_field :password, class: "form-control", placeholder: "password" %><br>
    <%= f.submit %>
  <% end%>

</div>